<script type="text/javascript" src="/custom/js/user.js"></script>

<!-- Main content -->
<div class="contentInner">
  <!--簡単検索-->
  <section>
    <% if (typeof message !== 'undefined') { %>
      <%- include(`./common/message_${message.type}`, message) %>
    <% } %>
  <div class="container-fluid">
    <form action="/user/add" method='POST' enctype='application/x-www-form-urlencoded'>
      <div class="form-row">
        <!-- Username -->
        <div class="form-group col-md-5">
          <label for="inputUsername">Username</label>
          <input type="text" class="form-control" id="inputUsername" placeholder="Username" name="username">
        </div>
        <!-- Role -->
        <div class="form-group col-md-2">
          <label for="inputRole">Role</label>
          <select id="inputRole" class="form-control" name="role">
            <option value="1" selected>admin</option>
            <option>...</option>
          </select>
        </div>
      </div>
      <div class="form-row">
        <!-- Password -->
        <div class="form-group col-md-5">
          <label for="inputPassword">Password</label>
          <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
        </div>
      </div>
      <div class="form-group">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="gridCheck">
          <label class="form-check-label" for="gridCheck">
            Does nothing for now!
          </label>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </form>
  </div>
  <br>
  </section>
</div>

<%- contentFor('pageTitle') %>
